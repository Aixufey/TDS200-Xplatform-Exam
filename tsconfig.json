{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        // Express CommonJS modules
        "allowJs": true,
        "checkJs": false,
        "esModuleInterop": true,
        // Declarative modules *.d.ts files
        "typeRoots": ["./src/types"],
        // Firebase auth module declaration
        "paths": {
            "@firebase/auth": ["./node_modules/@firebase/auth/dist/index.rn.d.ts"]
        }
    }
}
